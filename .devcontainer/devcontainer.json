// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "naip_cnn",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"mounts": [
		// Mount the data and model directories into the container
		"source=${env:HOME}${env:USERPROFILE}/naip-cnn/data,target=/workspaces/naip-cnn/data,type=bind,consistency=cached",
		"source=${env:HOME}${env:USERPROFILE}/naip-cnn/models,target=/workspaces/naip-cnn/models,type=bind,consistency=cached",
		// Mount Earth Engine credentials into the container
		"source=${env:HOME}${env:USERPROFILE}/.config,target=/root/.config,type=bind,consistency=cached"
	],
	"containerEnv": {
		// Silence TF info and warning messages
		"TF_CPP_MIN_LOG_LEVEL": "2"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"github.copilot",
				"charliermarsh.ruff",
				"ms-python.black-formatter",
				"tamasfe.even-better-toml",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"runArgs": [
		"--gpus=all"
	],
	"postCreateCommand": "git config core.editor 'code --wait' && pre-commit install"
}